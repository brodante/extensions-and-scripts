{
	"manifest_version": 2,
	"name": "Google Classroom Checkboxes",
	"version": "1.0",
	"description": "Adds checkboxes to assignments in the Google Classroom stream.",
	"permissions": ["tabs", "*://classroom.google.com/*"],
	"content_scripts": [
		{
			"matches": ["*://classroom.google.com/*"],
			"js": ["script.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"128": "icon.png"
	}
}
