{
  "manifest_version": 3,
  "name": "Pokémon Tracker",
  "version": "1.0",
  "description": "Get notified when selected Pokémon are available.",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png",
    "default_title": "Pokémon Tracker"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon128.png"
  }
}
